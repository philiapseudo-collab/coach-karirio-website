---
// src/pages/index.astro
// Fitness Influencer MVP - Phone-first SMS funnel landing page
import Layout from '../layouts/Layout.astro';
---

<Layout>
  <!-- ========================================
       SECTION 1: HERO
  ========================================= -->
  <section class="relative w-full min-h-screen flex items-center justify-center overflow-hidden bg-zinc-900">
    
    <!-- Background Image -->
    <img 
      src="/coach-k.jpg"
      alt=""
      aria-hidden="true"
      class="absolute inset-0 w-full h-full object-cover object-center"
    />
    
    <!-- Dark Overlay for Text Readability -->
    <div class="absolute inset-0 bg-black/60"></div>
    
    <!-- Hero Content -->
    <div class="relative z-10 max-w-4xl mx-auto px-6 py-20 text-center">
      <h1 class="text-5xl md:text-7xl font-bold mb-6 leading-tight">
        Stop Guessing. <span class="text-emerald-400">Start Training with Coach Kariro.</span>
      </h1>
      <p class="text-xl md:text-2xl text-zinc-300 mb-8">
        Get my FREE 5-Day Fitness Kickstart plan, sent right to your phone.
      </p>
      
      <!-- Scroll Down CTA (optional visual enhancement) -->
      <a href="#optin" class="inline-block text-emerald-400 hover:text-emerald-300 transition-colors">
        <svg class="w-8 h-8 mx-auto animate-bounce" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
        </svg>
      </a>
    </div>
  </section>

  <!-- ========================================
       SECTION 2: OPT-IN FORM (Most Important)
  ========================================= -->
  <section id="optin" class="w-full py-20 bg-zinc-800">
    <div class="max-w-xl mx-auto px-6">
      
      <div class="text-center mb-10">
        <h2 class="text-3xl md:text-4xl font-bold mb-4">
          Ready to Transform?
        </h2>
        <p class="text-zinc-300 text-lg">
          Enter your phone number below and get instant access to your free plan.
        </p>
      </div>

      <!-- Form -->
      <form id="smsOptInForm" class="bg-zinc-900 p-8 rounded-lg shadow-2xl border border-zinc-700">
        
        <!-- Phone Number Input -->
        <div class="mb-6">
          <label for="phoneNumber" class="block text-sm font-medium text-zinc-300 mb-2">
            Phone Number
          </label>
          <input
            type="tel"
            id="phoneNumber"
            name="phoneNumber"
            placeholder="07..."
            required
            class="w-full px-4 py-3 bg-zinc-800 border border-zinc-600 rounded-lg text-zinc-100 placeholder-zinc-500 focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:border-transparent transition"
          />
        </div>

        <!-- Consent Checkbox -->
        <div class="mb-6">
          <label class="flex items-start space-x-3 cursor-pointer">
            <input
              type="checkbox"
              id="smsConsent"
              name="smsConsent"
              required
              class="mt-1 w-5 h-5 text-emerald-500 bg-zinc-800 border-zinc-600 rounded focus:ring-2 focus:ring-emerald-500"
            />
            <span class="text-sm text-zinc-400">
              I agree to receive promotional SMS & WhatsApp messages from Coach Kariro. (Required)
            </span>
          </label>
        </div>

        <!-- Submit Button -->
        <button
          type="submit"
          id="submitButton"
          class="w-full bg-emerald-500 hover:bg-emerald-600 text-zinc-900 font-bold py-4 px-6 rounded-lg transition-all duration-200 transform hover:scale-105 active:scale-100 disabled:opacity-50 disabled:cursor-not-allowed disabled:transform-none"
        >
          GET THE FREE PLAN
        </button>

        <!-- Feedback Message -->
        <div id="feedbackMessage" class="mt-4 text-center hidden"></div>
      </form>

    </div>
  </section>

  <!-- ========================================
       SECTION 3: SOCIAL PROOF
  ========================================= -->
  <section class="w-full py-16 bg-zinc-900">
    <div class="max-w-6xl mx-auto px-6">
      
      <p class="text-center text-zinc-400 text-sm uppercase tracking-wider mb-8">
        As seen on:
      </p>

      <!-- Social Platform Logos -->
      <div class="flex justify-center items-center space-x-12 flex-wrap gap-8">
        
        <!-- Instagram -->
        <a href="https://www.instagram.com/bura_rated?igsh=NDNreGg5OW16ZGph" target="_blank" rel="noopener noreferrer" class="text-zinc-400 hover:text-emerald-400 transition-colors">
          <svg class="w-12 h-12" fill="currentColor" viewBox="0 0 24 24">
