        <!-- Instagram -->
        <a href="https://www.instagram.com/bura_rated?igsh=NDNreGg5OW16ZGph" target="_blank" rel="noopener noreferrer" class="text-zinc-500 hover:text-emerald-400 transition-colors" aria-label="Instagram">
